<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:id="@+id/fragment3"

    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/button4"
            android:layout_marginLeft="320dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:clickable="true"
            android:src="@drawable/false2"></ImageView>

        <Button
            android:id="@+id/buttonleft"
            android:layout_width="200dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="100dp"
            android:layout_height="match_parent"
            android:background="#00ff0000"
            />

        <Button
            android:id="@+id/buttonright"
            android:layout_width="200dp"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="200dp"
            android:layout_height="match_parent"
            android:background="#00ff0000"
            />


        <GridView
            android:id="@+id/galleryGridView"
            android:layout_width="match_parent"
            android:layout_height="421dp"
            android:layout_alignBottom="@+id/ImageView"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="160dp"
            android:columnWidth="280dp"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:numColumns="3"
            android:padding="2dp"
            android:stretchMode="columnWidth"
            android:verticalSpacing="2dp"></GridView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"

            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#794EE2DD"
                android:backgroundTint="@android:color/holo_blue_dark"
                android:text="@string/gallery"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#794EE2DD"
                android:backgroundTint="@android:color/holo_red_dark"
                android:text="@string/camera"
                android:textColor="@android:color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#794EE2DD"
                android:backgroundTint="@android:color/holo_orange_dark"
                android:text="@string/refresh"
                android:textColor="@android:color/white"
                android:textSize="24sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/BlackBackground"
            android:layout_width="match_parent"
            android:layout_height="421dp"
            android:layout_marginBottom="150dp"
            android:background="@color/cardview_dark_background"></ImageView>

        <ImageView
            android:id="@+id/ImageView"
            android:layout_width="match_parent"
            android:layout_height="545dp"
            android:layout_alignStart="@+id/BlackBackground"
            android:layout_alignLeft="@+id/BlackBackground"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginBottom="150dp"
            android:gravity="center"></ImageView>

    </RelativeLayout>

</LinearLayout>